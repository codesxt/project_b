<div class="container-fluid">
<div class="row">
	<div class="col-lg-offset-3 col-lg-6" >
		<div id="form-container" class="container-fluid">
			<h2 class="col-sm-offset-4">Entrar</h2>
			<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "form-horizontal", :role => "form"}) do |f| %>
			<div class="form-group">
				<%= f.label :email, "Correo", :class => "col-sm-4 control-label"%>
				<%= f.email_field :email, :autofocus => true, :class => "col-sm-7"%>				
			</div>
			<div class="form-group">
				<%= f.label :password, "ContraseÃ±a", :class => "col-sm-4 control-label" %>
				<%= f.password_field :password, :class => "col-sm-7" %>
			</div>
			<div class="form-group">
				<% if devise_mapping.rememberable? -%>
					 <%= f.label :remember_me, "Recordar", :class => "col-sm-4 control-label" %>
  				<% end -%>
  				<%= f.check_box :remember_me %>
			</div>
			<div class="form-group">
				<%= f.submit "Entrar", :class => "btn btn-primary col-sm-offset-5" %>
				<% end %>
			</div>
			<div class="row">
				<div class="col-lg-12">
					<%= render "devise/shared/links" %>
					<br/>
				</div>
			</div>
		</div>	
	</div>
</div>
</div>


