<div class="container-fluid">
<div class="row">
  <div class="col-lg-offset-3 col-lg-6" >
    <div class="container-fluid styled-container">
      <h2 class="col-sm-offset-4">¿Olvidaste tu contraseña?</h2>
      	<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
      	<%= devise_error_messages! %>
      <div class="form-group">
      	<%= f.label :email, "Correo", :class => "col-sm-4 control-label" %>
      	<%= f.email_field :email, :autofocus => true, :placeholder => "Correo electrónico", :class => "col-sm-7" %>
      <br/>
      </div>
      <div class="form-group">
      	<%= f.submit "Enviarme instrucciones para reiniciar mi contraseña", :class => "btn btn-primary col-sm-offset-4" %>
      	<% end %>
      </div>
      <div class="row">
        <div class="col-lg-12">
          <%= render "devise/shared/links" %>
          <br/>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
