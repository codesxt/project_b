<div class="row">
  	<div class="col-lg-offset-3 col-lg-6" >
    	<div class="container-fluid styled-container">
			<h2 class="col-sm-offset-4">Añadir un nuevo libro</h2>
			<%= form_for @new_book, :html => {:class => "form-horizontal", :role => "form"} do |f| %>
			<div class="form-group">
		        <%= f.label :title, "Título", :class => "col-sm-4 control-label" %>
		        <%= f.text_field :title, :placeholder => "Título del Libro", :class => "col-sm-7" %>
		    </div>
		    <div class="form-group">
		        <%= f.label :author, "Autor", :class => "col-sm-4 control-label" %>
		        <%= f.text_field :author, :placeholder => "Nombre del Autor", :class => "col-sm-7" %>
		    </div>
		    <div class="form-group">
		        <%= f.label :genre, "Género", :class => "col-sm-4 control-label" %>
		        <%= f.collection_select :genre, Genre.all, :id, :name, :class => "col-sm-7" %>
		    </div>
		    <div class="form-group">
		        <%= f.label :description, "Descripción", :class => "col-sm-4 control-label" %>
		        <%= f.text_area :description, :placeholder => "Escribe una pequeña descripción del libro", :class => "col-sm-7", :rows => "5" %>
		    </div>
		    <div class="form-group">
		        <%= f.submit "Añadir Libro", :class => "btn btn-primary col-sm-offset-5" %>
				<% end %>
		    </div>
		</div>
	</div>
</div>