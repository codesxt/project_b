<div class="container-fluid">
<div class="row">
  <div class="col-lg-offset-3 col-lg-6" >
    <div class="container-fluid styled-container">
    	<h2 class="col-sm-offset-4">Editar datos del libro</h2>
    	<%= form_for @book, :html => { :method => :put, :class => "form-horizontal", :role => "form" } do |f| %>
    	<div class="form-group">
	        <%= f.label :title, "Título", :class => "col-sm-4 control-label" %>
	        <%= f.text_field :title, :autofocus => true, :class => "col-sm-7" %>
	    </div>
	    <div class="form-group">
	        <%= f.label :author, "Autor", :class => "col-sm-4 control-label" %>
	        <%= f.text_field :author, :class => "col-sm-7" %>
	    </div>
	    <div class="form-group">
	        <%= f.label :genre, "Autor", :class => "col-sm-4 control-label" %>
	        <%= f.collection_select :genre, Genre.all, :id, :name, :class => "col-sm-7" %>
	    </div>
	    <div class="form-group">
	        <%= f.label :description, "Descripción", :class => "col-sm-4 control-label" %>
	        <%= f.text_area :description, :rows => "5", :class => "col-sm-7" %>
	    </div>
	    <div class="form-group">
	        <%= f.submit "Actualizar Libro", :class => "btn btn-primary col-sm-offset-5" %>
	        <% end %>
	    </div>
    </div>
  </div>
</div>
</div>
